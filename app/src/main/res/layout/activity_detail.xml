<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_iv_layout_height"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop"
            android:paddingBottom="@dimen/paddingBottom1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            android:paddingTop="@dimen/also_known_as_pad_top"
            android:paddingBottom="@dimen/also_known_as_pad_bottom"
            android:paddingStart="@dimen/also_known_as_pad_start"
            android:paddingEnd="@dimen/also_known_as_pad_end"/>

        <TextView
            android:id="@+id/name_of_sandwich_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/name_of_sandwich_textsize"
            android:textStyle="italic"
            android:background="@color/colorPrimary"
            android:paddingStart="@dimen/name_of_sandwich_padStart"
            android:paddingEnd="@dimen/paddingEnd"/>

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/also_known_tv_text_size"
            android:textStyle="italic"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/also_known_tv_margin_bottom"
            android:paddingStart="@dimen/also_known_tv_pad_start"
            android:paddingEnd="@dimen/paddingEnd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold"
            android:paddingBottom="@dimen/place_of_origin_pad_bottom"
            android:paddingStart="@dimen/place_of_origin_pad_start"
            android:paddingEnd="@dimen/paddingEnd"/>

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:paddingBottom="@dimen/origin_tv_padd_bottom"
            android:paddingStart="@dimen/origin_tv_padd_left"
            android:paddingEnd="@dimen/origin_tv_padd_right"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold"
            android:paddingBottom="@dimen/detail_ingredients_padd_bottom"
            android:paddingStart="@dimen/detail_ingredients_padd_start"
            android:paddingEnd="@dimen/paddingEnd"/>


        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:paddingBottom="@dimen/ingredients_tv_padd_bottom"
            android:paddingStart="@dimen/ingredients_tv_padd_left"
            android:paddingEnd="@dimen/ingredients_tv_padd_right"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:text="@string/detail_description_label"
            android:textStyle="bold"
            android:paddingBottom="@dimen/detail_description_padd_bottom"
            android:paddingStart="@dimen/detail_description_padd_start"
            android:paddingEnd="@dimen/paddingEnd"/>

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:paddingBottom="@dimen/description_tv_padd_bottom"
            android:paddingStart="@dimen/description_tv_padd_left"
            android:paddingEnd="@dimen/description_tv_padd_right"/>

    </LinearLayout>

</ScrollView>
